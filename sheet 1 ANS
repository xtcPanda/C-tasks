int main()

{
    
 cout<<"Enter your name : ";
  string name;
 
 getline(cin,name);
  
 cout<<"Enter your age : ";
 
 float age;
  cin>>age;
 
 cout<<name<<" welcome to Future University in Egypt you are "<<age<<" yers old"<<endl;

    return 0;

}

