{
	int num,temp,rem,dec = 0,b = 1;
	cout<<"Enter a Binary number: ";
	cin>>num;
	temp = num;
	while(num > 0)
	{
		rem = temp % 10;
		dec = dec + rem * b;
		b *= 2;
		temp /= 10;
	}
	cout<<"the decimal number = "<<dec<<endl;

	system("pause");
	return 0;
}

